# Jira DC
JIRA_BASE_URL=https://your-jira.example.com
JIRA_AUTH_TYPE=pat           # pat | basic
JIRA_TOKEN=your_pat_token
# For basic:
# JIRA_USERNAME=your_username
# JIRA_PASSWORD=your_password

# Scope
JIRA_JQL=order by updated asc

# Pagination
JIRA_PAGE_SIZE=100

# DB
PG_HOST=127.0.0.1
PG_PORT=5432
PG_DB=jira_analytics
PG_USER=jira_etl
PG_PASSWORD=BitteEinSicheresPasswort

# ETL
ETL_SCOPE_NAME=issues_default_scope
ETL_OVERLAP_MIN=5    # minutes overlap for safety

# Logging
LOG_LEVEL=INFO               # DEBUG | INFO | WARNING | ERROR
LOG_FILE=etl.log             # path relative to project root or absolute
LOG_JSON=true                # true|false
LOG_MAX_BYTES=10485760       # 10 MB
LOG_BACKUP_COUNT=5
